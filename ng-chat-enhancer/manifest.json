{
	"manifest_version": 2,

	"name": "Newgrounds Chat Enhancer",
	"short_name": "NGCE",
	"description": "Glorified blocker.",
	"version": "1.0.3.1",

	"browser_action": {
		"default_icon": {
			"38": "icon.png"
		},
		"default_title": "Newgrounds Chat",
		"default_popup": "popup/popup.html"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"storage", "tabs"
	],

	"content_scripts": [
		{
			"css": [ "page/main.css" ],
			"js": [ "page/main.js" ],
			"all_frames": true,
			"matches": [
				"https://chat.newgrounds.com/*"
			]
		}
	],

	"icons": {
		"64": "icon.png"
	}
}
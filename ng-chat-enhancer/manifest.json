{
	"manifest_version": 2,

	"name": "Newgrounds Chat Enhancer",
	"short_name": "NGCE",
	"description": "Glorified blocker.",
	"version": "1.0.4.1",

	"browser_action": {
		"default_icon": {
			"38": "icon.png"
		},
		"default_title": "Newgrounds Chat",
		"default_popup": "popup/popup.html"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"storage", "tabs"
	],

	"content_scripts": [
		{
			"css": [ "page/main.css" ],
			"js": [
				"page/js/_ngce.js",
				"page/js/chrome-sync.js",

				"page/js/block.js",
				"page/js/emoticons.js",
				"page/js/key-commands.js",
				"page/js/last-seen.js",
				"page/js/mentions.js",
				"page/js/sounds.js",

				"page/main.js"
			],
			"all_frames": true,
			"run_at": "document_start",
			"matches": [
				"https://chat.newgrounds.com/*"
			]
		}
	],

	"icons": {
		"64": "icon.png"
	}
}